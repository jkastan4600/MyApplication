<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jkast.myapplication.WelcomeScreen">

    <TextView
        android:text="@string/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:id="@+id/textView"
        android:textSize="48sp" />

    <Button
        android:text="@string/login_button"
        android:onClick="loginButton"
        android:layout_marginTop="31dp"
        android:id="@+id/login_button_id"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_width="220dp"
        android:layout_height="90dp" />

    <Button
        android:text="@string/create_new_account_button"
        android:onClick="createNewAccountButton"
        android:layout_height="70dp"
        android:layout_marginTop="37dp"
        android:id="@+id/Create_new_account_button_id"
        android:layout_below="@+id/login_button_id"
        android:layout_centerHorizontal="true"
        android:layout_width="180dp" />
</RelativeLayout>
