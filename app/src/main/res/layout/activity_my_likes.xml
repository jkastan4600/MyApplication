                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/aviation_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/aviation"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/bird_watching_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/BirdWatching"
                        android:textSize="20sp" />

                    <CheckBox
