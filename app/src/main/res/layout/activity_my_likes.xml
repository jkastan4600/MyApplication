<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_likes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jkast.myapplication.MyLikes">

    <TextView
        android:text="@string/my_likes_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mylikesview"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/mylikesview"
        android:id="@+id/my_likes_scrollview"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="190dp"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:text="@string/animals_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/animals"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/archaeology_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/archaeology"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="Architecture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/architecture"
                        android:textSize="20sp"
                        tools:ignore="HardcodedText" />

                    <CheckBox
                        android:text="@string/biology_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Biology"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/books_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Books"
                        android:textSize="20sp"
                        tools:ignore="HardcodedText" />

                    <CheckBox
                        android:text="@string/competition_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Competition"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/culture_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Culture"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/current_events_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/CurrentEvents"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/dating_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Dating"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/disease_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Disease"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/drama_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Drama"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/economics_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Economics"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/engineering_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Engineering"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/fitness_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Fitness"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/flowers_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Flowers"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/fund_raising_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/FundRaising"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/gardens_gardening_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/GardensGardening"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/government_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Government"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/health_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Health"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/hobbies_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Hobbies"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/investing_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
