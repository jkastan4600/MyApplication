                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/collecting_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Collecting"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/crime_true_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Crime"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/dance_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Dance"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/dermatology_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Dermatology"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/doctors_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Doctors"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/ecology_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Ecology"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/education_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Education"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/evolution_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Evolution"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/flags_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Flags"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/food_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Food"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/games_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Games"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/geography_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Geography"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/guns_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Guns"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/history_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/History"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/insects_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Insects"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/law_enforcement_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/LawEnforcement"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/medicine_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Medicine"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/magic_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Magic"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/music_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Music"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/parties_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Parties"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/religion_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Religion"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/sight_seeing_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/SightSeeing"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/theater_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Theater"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/travel_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Travel"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/volunteering_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Volunteering"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/wine_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Wine"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/writing_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Writing"
                        android:textSize="20sp" />

                </LinearLayout>
            </LinearLayout>

            <Button
                android:text="@string/set_my_likes_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/set_likes_btn"
                android:textSize="30sp"
                android:layout_below="@+id/my_likes_scrollview"
                android:elevation="10dp"
                android:background="#1bcc00" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
