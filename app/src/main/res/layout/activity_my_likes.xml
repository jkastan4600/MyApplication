                        android:layout_height="wrap_content"
                        android:id="@+id/LunchOutings"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/military_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Military"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/movies_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Movies"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/nature_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Nature"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/politics_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Politics"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/sports_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Sports"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/technology_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Technology"
                        android:textSize="20sp" />

                    <CheckBox
                        android:text="@string/the_colonnades_text"
